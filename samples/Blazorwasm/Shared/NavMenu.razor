<TopAppBar Type="@topAppBarType">
    <TopAppBarNav BrandTitle="@brandTitle" 
                  HideBrandTitle="@hideBrandTitle" 
                  UseBrandImage="@useBrandImage" 
                  HideBrandImage="@hideBrandImage"
                  ScrollToTop="@scrollToTop">
        <button class="navbar-toggler bg-transparent no-outline" @onclick="ToggleNavMenu">
            <span class="oi oi-menu text-light align-middle"></span>
        </button>
    </TopAppBarNav>
    <TopAppBarActions ShowActionsAlways="@showActionsAlways">
        <a href="https://github.com/Mobsites/Blazor.TopAppBar" target="_blank" class="ml-md-auto pr-2"><img src="github.png" width="24" height="24" /></a>
        <a href="https://github.com/Mobsites" target="_blank" class="pr-2"><img src="mobsites-logo.png" width="24" height="24" /></a>
        <a href="https://github.com/allan-mobley-jr" target="_blank" class="pr-2"><img src="me.png" width="24" height="24" /></a>
    </TopAppBarActions>
</TopAppBar>

<!-- Add adjustment class to prevent TopAppBar from hiding some of this content -->
<div class="@NavMenuCssClass @TopAppBar.AdjustmentMarkerClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    TopAppBar.Types topAppBarType = TopAppBar.Types.Standard;
    private string brandTitle = "Demo";
    private bool hideBrandTitle = false;
    private bool useBrandImage = true;
    private bool hideBrandImage = false;
    private bool scrollToTop = true;
    private bool showActionsAlways = false;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public void ChangeType(TopAppBar.Types value)
    {
        topAppBarType = value;
        StateHasChanged();
    }

    public void ChangeBrandTitle(string value)
    {
        brandTitle = value;
        StateHasChanged();
    }

    public void HideBrandTitle(bool value)
    {
        hideBrandTitle = value;
        StateHasChanged();
    }

    public void UseBrandImage(bool value)
    {
        useBrandImage = value;
        StateHasChanged();
    }

    public void HideBrandImage(bool value)
    {
        hideBrandImage = value;
        StateHasChanged();
    }

    public void ScrollToTop(bool value)
    {
        scrollToTop = value;
        StateHasChanged();
    }

    public void ShowActionsAlways(bool value)
    {
        showActionsAlways = value;
        StateHasChanged();
    }
}